@{
    ViewData["Title"] = "Edit Patient";
}
<style>
    .form-group {
        margin-top: 10px;
        margin-bottom: 10px;
    }
</style>

<div>
    <form>
        <div class="form-group row">
            <input id="id" value="" hidden />
            <label for="staticEmail" class="col-sm-2 col-form-label text-end">Patient Name <span class="text-danger">*</span> </label>
            <div class="col-sm-8">
                <input id="name" class="form-control" required />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label text-end">Disease Name <span class="text-danger">*</span></label>
            <div class="col-sm-8">
                <select id="diseaseId" class="form-control">
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label text-end">Epilepsy <span class="text-danger">*</span></label>
            <div class="col-sm-8">
                <select id="hasEpilepsy" class="form-control">
                    <option value="0">No </option>
                    <option value="1">Yes </option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label text-end">NCD</label>
            <div class="col-sm-3">
                <select multiple id="select1" style="height:200px; width:250px;">
                </select>
            </div>
            <div class="col-sm-2 d-flex flex-column justify-content-center">
                <div class="d-flex justify-content-center my-1">
                    <button id="addNCD" class="btn btn-success">Add ></button>
                </div>
                <div class="d-flex justify-content-center">
                    <button id="removeNCD" class="btn btn-danger">< Remove</button>
                </div>
            </div>
            <div class="col-sm-3">
                <select multiple id="select2" style="height:200px; width:250px; float:right">
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label text-end">Allergie</label>
            <div class="col-sm-3">
                <select multiple id="select3" style="height:200px; width:250px;">
                </select>
            </div>
            <div class="col-sm-2 d-flex flex-column justify-content-center">
                <div class="d-flex justify-content-center my-1">
                    <button id="addAllergie" class="btn btn-success">Add ></button>
                </div>
                <div class="d-flex justify-content-center">
                    <button id="removeAllergie" class="btn btn-danger">< Remove</button>
                </div>
            </div>
            <div class="col-sm-3">
                <select multiple id="select4" style="height:200px; width:250px;float:right">
                </select>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <button id="btnSave" class="btn btn-primary">Update</button>
        </div>
    </form>

</div>

@section Scripts {
    <script src="~/js/update.js"></script>
}
